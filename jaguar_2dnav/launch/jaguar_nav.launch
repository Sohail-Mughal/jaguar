<launch>
 
  <!-- Jaguar drivers -->
<node pkg="drrobot_player_driver3" type="drrobot_player_driver3_node" name="jaguar_driver_node" > </node>


<!-- joy node -->
  <node respawn="true" pkg="joy" type="joy_node" name="joy_node" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
    <!--param name="autorepeat_rate" type="double" value="10.0" /-->
  </node>


<!-- Teleoperation -->
<node pkg="mixed_initiative_teleop" type="mixed_initiative_teleop_node" name="teleop" output="screen">
</node>

<!-- MI controller -->
<node pkg="mixed_initiative_controller" type="mixed_initiative_controller_node" name="mi_controller" output="screen">
<remap from="/cmd_vel" to="drrobot_cmd_vel" />
</node>

  <!-- SICK laser scaner drivers -->


<node name="sick_tim551_2050001" pkg="sick_tim3xx" type="sick_tim551_2050001" respawn="false" output="screen">
<param name="frame_id" type="string" value="base_laser"/>

 <!--arg name="host" default="192.168.0.103" />
  <node pkg="lms1xx" name="lms1xx" type="LMS1xx_node" output="screen">
    <param name="host" value="$(arg host)" />
    <param name="frame_id" type="string" value="base_laser"/-->
  </node>


  <!-- tf transform -->
  <!-- approximative measures -->
  <!-- args ="x y z qx qy qz frame_id child_frame_id period_in_ms" -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.224 0 0.125 0 0 0 base_link base_laser 66" />

<node pkg="tf" type="static_transform_publisher" name="odom_to_base_link" args="0 0 0 0 0 0 odom base_link 66" />

<!-- Hector SLAM -->
  <include file="$(find jaguar_2dnav)/launch/hector_slam.launch"/>

<!-- Hector trajectory server for keeping history and visualizing of all the paths visited -->
<!--node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server" output="screen">
  </node-->

<node pkg="odom_from_pose" type="odom_from_pose_node" name="odom_from_pose" output="screen"> 
  <remap from="/odom_testing" to="/odom" />
  </node>

<!-- launch move_base -->
<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find jaguar_2dnav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find jaguar_2dnav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find jaguar_2dnav)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find jaguar_2dnav)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find jaguar_2dnav)/config/base_local_planner_params.yaml" command="load" />
<remap from="/cmd_vel" to="/navigation/cmd_vel" />
  </node>

<!-- Frontier exploration -->
  <!--include file="$(find dora_2dnav)/config/frontier_exploration.launch"/-->

</launch>
